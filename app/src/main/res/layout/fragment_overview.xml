<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background">

    <RelativeLayout
        android:id="@+id/rl_period"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorWhiteTransparent"
            android:layout_marginStart="18dp"
            android:text="PERIOD"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/periods"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            style="@style/Widget.MyTheme.HeaderBar.Spinner"
            android:layout_marginEnd="18dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_supermarket_bar_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_period"
        android:layout_margin="10dp"
        android:background="@drawable/layout_bg">

        <TextView
            android:id="@+id/tv_supermarkets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:text="Supermarkets"/>

        <TextView
            android:id="@+id/tv_supermarkets_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@+id/tv_supermarkets"
            android:layout_toEndOf="@+id/tv_supermarkets"
            android:text="3 Apr - 10 Apr"/>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/supermarket_bar_chart"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="18dp"
            android:layout_below="@+id/tv_supermarkets"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_supermarket_bar_chart"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/layout_bg">

        <TextView
            android:id="@+id/tv_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:text="Products"/>

        <TextView
            android:id="@+id/tv_products_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@+id/tv_products"
            android:layout_toEndOf="@+id/tv_products"
            android:text="3 Apr - 10 Apr"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_products"
            android:layout_marginBottom="18dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

